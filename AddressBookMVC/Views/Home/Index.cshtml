@{
    ViewData["Title"] = "Home Page";
}
@section Head {
    <link href="~/css/addressbook.css" rel="stylesheet" type="text/css" />
}
<div class="container pt-0">
    <div class="row justify-content-center">
        <div class="col">
            <img class="mx-auto rounded img-fluid d-block my-2" src="~/img/addressbook-logo.PNG" alt="Address Book logo" />
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-12">
            <div class="mb-5 section bg-dark text-white p-3 rounded shadow-sm bg-opacity">
                <h1 class="mb-5">Address Book</h1>
                <h5>The Address Book allows you to save your contacts information </h5>
                <ul>
                    <li>Save your contacts information such as address, email and phone number</li>
                    <li>Your contacts get stored in a database for persistence</li>
                    <li>Contacts can be listed, added, deleted or edited</li>
                </ul>
                <div>
                    <a class="btn btn-secondary" asp-area="" asp-controller="Contacts" asp-action="Index">Try it out</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-lg-8 col-md-6">
            <div class="mb-2 section bg-dark text-white p-3 rounded shadow-sm bg-opacity">
                <h4 class="mb-3">Instructions:</h4>
                <p>Navigate to App via navigation bar or "Try it Out" link</p>
                <p>Start adding your contacts by click the "Create New" link</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="section bg-dark text-white p-3 rounded shadow-sm bg-opacity">
                <h4 class="mb-3">Technologies used</h4>
                <i class="fab fa-microsoft fa-3x me-3" id="msicon" title=".NET"></i>
                <i class="fab fa-js-square fa-3x me-3" id="jsicon" title="JavaScript"></i>
                <i class="fab fa-bootstrap fa-3x me-3" id="bsicon" title="Bootstrap"></i>
                <i class="fab fa-html5 fa-3x me-3" id="html5icon" title="HTML"></i>
                <i class="fab fa-css3-alt fa-3x me-3" id="css3icon" title="CSS"></i>
            </div>
        </div>
    </div>
</div>

 
